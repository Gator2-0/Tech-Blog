<div class="d-flex flex-row">
  <div class="col-md-8 " >
      <div class="blog">
        <h4>{{blog.title}}</h4>
        <span>{{ format_date blog.date_created}}</span>
        <br>
        <br>
        <p>{{blog.content}}</p>
        <span>Created by {{blog.user.name}}</span>
      </div>

      <form class="form col-md-8 comment-form">
        <div class="form-group">
          <label for="comment-text">comment</label>
          <input class="form-input" type="text" id="comment-text" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">submit</button>
        </div>
      </form>
  </div>   

  <div class="col-md-4 ">
  {{#each comments as |comment|}}
  <div class="blog" > 
    <h4>{{comment.user.name}}</h4>
    <p>{{comment.content}}</p>
    <span>{{format_date comment.date_created}}</span>
  </div>  
  {{/each}}
  </div>

  
</div>
<script src="/js/comment.js"></script>